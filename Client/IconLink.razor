<NavLink class="px-4 py-2 block hover:no-underline" href=@Link Match=NavLinkMatch.All>
    <span class="relative top-px inline-block w-8" aria-hidden="true">
        @ChildContent
    </span> @Text
</NavLink>

@code 
{
        [Parameter]
        public string Text { get; set; }

        [Parameter]
        public string Link { get; set; }

        [Parameter]
        public RenderFragment ChildContent { get; set; }
}