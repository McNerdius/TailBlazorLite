{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}/Client",
      "preLaunchTask": "start tailwind jit/watch",
      "postDebugTask": "stop tailwind jit/watch"
    },
    {
      "name": "Watch",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "console": "integratedTerminal",
      "args": [
        "watch",
        "run"
      ],
      "cwd": "${workspaceFolder}/Client",
      "preLaunchTask": "start tailwind jit/watch",
      "postDebugTask": "stop tailwind jit/watch",
      "presentation": {
        "close": true,
      },
      "internalConsoleOptions": "neverOpen"
    },
  ]
}